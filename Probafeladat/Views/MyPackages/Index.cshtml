@model Probafeladat.ViewDTO.MyPackages

@{
    ViewData["Title"] = "Csomagjaim";
}

<h2>Csomagjaim:</h2>


@if (Model.Packages.Count() == 0)
{
    <div class="alert alert-info" role="alert"><h2>Nem található csomag.</h2></div>
}
else
{
    <div class="row">
        @foreach (Package package in Model.Packages)
        {
            <div class="col-sm-6 col-md-4">
                <a href="/MyPackages/Details/@(package.ID)" class="package-container">
                    <div class="thumbnail">
                        <span class="glyphicon glyphicon-th-large" style="font-size:200%;"></span>
                        <div class="caption">
                            <h3>@(package.Identifier)</h3>
                            <p>@(package.ShippingState.Description)</p>
                        </div>
                    </div>
                </a>               
            </div>
        }
    </div>
}
